<div class="max-w-6xl mx-auto px-6 py-16 sm:py-24">

  <%# Header %>
  <header class="mb-20">
    <h1 class="font-['PT_Serif'] text-3xl sm:text-4xl font-bold tracking-tight mb-3">
      Дмитрий Шустов
    </h1>
    <p class="text-[#666666] text-lg leading-relaxed max-w-xl mb-6">
      Делаю Telegram-боты и веб-сервисы на стыке AI и продукта.
    </p>
    <div class="flex gap-5 text-sm text-[#666666]">
      <a href="https://t.me/dvshustov" target="_blank" class="hover:text-[#111111] transition-colors">Telegram</a>
      <a href="https://github.com/dshust" target="_blank" class="hover:text-[#111111] transition-colors">GitHub</a>
    </div>
  </header>

  <%# Projects grid %>
  <section>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-px bg-[#e5e5e5]">
      <% @projects.each do |project| %>
        <article class="bg-white group">
          <a href="<%= project.url %>" target="_blank" class="flex flex-col h-full p-8 hover:bg-[#fafafa] transition-colors">

            <div class="text-7xl mb-6 leading-none select-none">
              <%= project.emoji %>
            </div>

            <div class="mb-1">
              <span class="text-[10px] uppercase tracking-widest text-[#999999] font-medium"><%= project.tag %></span>
            </div>

            <h3 class="font-['PT_Serif'] text-xl font-bold mb-2 group-hover:underline underline-offset-2">
              <%= project.name %>
            </h3>

            <p class="text-sm text-[#555555] leading-relaxed flex-1">
              <%= project.description %>
            </p>

            <span class="mt-5 text-xs text-[#bbbbbb]">
              <%= project.url.gsub(/^https?:\/\//, '').gsub(/\/$/, '') %> ↗
            </span>

          </a>
        </article>
      <% end %>
    </div>
  </section>

  <%# Footer %>
  <footer class="mt-16 text-sm text-[#bbbbbb]">
    shust.ai
  </footer>

</div>
