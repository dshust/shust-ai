<div class="max-w-6xl mx-auto px-6 py-8">

  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-semibold text-[#1a1a1a]">Мои сервисы</h1>
      <p class="text-sm text-[#737373] mt-1">Приложения, созданные вами</p>
    </div>
    <a href="<%= new_enva_service_path %>"
      style="display:inline-flex;align-items:center;gap:6px;background:#0000CC;color:white;font-size:14px;font-weight:500;padding:0 16px;height:36px;border-radius:8px;text-decoration:none;">
      <svg width="14" height="14" viewBox="0 0 14 14" fill="none">
        <path d="M7 1v12M1 7h12" stroke="white" stroke-width="1.8" stroke-linecap="round"/>
      </svg>
      Создать сервис
    </a>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">

    <% @services.each do |s| %>
      <a href="<%= enva_service_path(s) %>"
        style="background:white;border-radius:12px;border:1px solid #e5e5e5;padding:20px;display:flex;flex-direction:column;gap:12px;text-decoration:none;"
        onmouseover="this.style.boxShadow='0 4px 12px rgba(0,0,0,0.08)'"
        onmouseout="this.style.boxShadow='none'">
        <div style="display:flex;align-items:flex-start;justify-content:space-between;">
          <div style="width:44px;height:44px;border-radius:12px;background:#f0f0ff;display:flex;align-items:center;justify-content:center;font-size:22px;"><%= s.emoji || "⚡" %></div>
          <span style="display:inline-flex;font-size:12px;font-weight:500;padding:2px 8px;border-radius:6px;<%= s.published? ? 'background:#f0faf4;color:#008744;' : 'background:#f5f5f5;color:#737373;' %>">
            <%= s.published? ? "Опубликован" : "Черновик" %>
          </span>
        </div>
        <div>
          <div style="font-size:15px;font-weight:600;color:#1a1a1a;"><%= s.name.presence || s.prompt.truncate(40) %></div>
          <div style="font-size:13px;color:#737373;margin-top:4px;line-height:1.5;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;"><%= s.prompt %></div>
        </div>
        <div style="font-size:12px;color:#a0a0a0;padding-top:8px;border-top:1px solid #f0f0f0;">
          <%= s.created_at.strftime("%d.%m.%Y") %>
        </div>
      </a>
    <% end %>

    <a href="<%= new_enva_service_path %>"
      style="background:white;border-radius:12px;border:2px dashed #e5e5e5;padding:20px;display:flex;flex-direction:column;align-items:center;justify-content:center;gap:12px;min-height:180px;text-decoration:none;"
      onmouseover="this.style.borderColor='#0000CC';this.style.background='#fafaff'"
      onmouseout="this.style.borderColor='#e5e5e5';this.style.background='white'">
      <div style="width:44px;height:44px;border-radius:12px;background:#f0f0ff;display:flex;align-items:center;justify-content:center;">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M10 4v12M4 10h12" stroke="#0000CC" stroke-width="1.8" stroke-linecap="round"/>
        </svg>
      </div>
      <span style="font-size:14px;font-weight:500;color:#737373;">Создать новый сервис</span>
    </a>

  </div>

</div>
